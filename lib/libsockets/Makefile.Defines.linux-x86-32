CXX =		g++

CFLAGS += -march=i586 -Wall -g $(INCLUDE) -MD -D_VERSION='"$(VERSION)"'

# turn off optimization if compiling with gcc 2.9.x:
#CFLAGS +=	-O0
CFLAGS +=	-O2


CFLAGS +=	-DLINUX

CFLAGS +=	-fPIC

LIBS +=		\
		-lpthread

OBJS +=		Semaphore.o

LDFLAGSSO =	-shared \
		-Wl,-lxml2 \
		-Wl,-lpthread \
		-Wl,-h$(SONAME) \
		-Wl,-call_shared

